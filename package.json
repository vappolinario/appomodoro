		"@sveltejs/adapter-node": "^1.0.0-next.46",
		"@sveltejs/kit": "^1.0.0-next.162",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.4.0",
		"smui-theme": "^4.2.0",
		"svelte": "^3.42.4"
	},
	"type": "module",
	"dependencies": {
		"@smui/button": "^4.2.0",
		"nanoid": "^3.1.25",
		"svelte-material-ui": "^4.2.0"
	}
